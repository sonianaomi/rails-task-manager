<h1>All my tasks:</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.description, task_path(task.id) %> <br>
      <small> <%= task.created_at %> </small>
    </li>
  <% end %>
</ul>

<ul class="list-inline bottom-links">
  <li> <%= link_to 'Create a new task', new_task_path, class: "btn btn-primary" %> </li>
</ul>
