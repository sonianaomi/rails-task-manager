<h1><%= @task.description %></h1>
<p><%= @task.created_at %></p>

<ul class="list-inline bottom-links">
  <li> <%= link_to 'View all', tasks_path, class: "btn btn-primary" %> </li>
  <li> <%= link_to 'Edit', edit_task_path(@task.id), class: "btn btn-primary" %> </li>
  <li> <%= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary" %> </li>
</ul>
